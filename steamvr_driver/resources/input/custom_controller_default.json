{
   "name": "Custom Controller Default Bindings",
   "controller_type": "custom_controller",
   "description": "Simple menu button (Y key) for custom VR controller",
   "bindings": {
      "/actions/main": {
         "sources": [
            {
               "mode": "button",
               "path": "/user/hand/left/input/application_menu",
               "inputs": {
                  "click": {
                     "output": "/actions/main/in/menu"
                  }
               }
            }
         ]
      }
   }
}
